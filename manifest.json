{
    "background": {
        "presistent": true,
        "scripts": ["js/background.js" ]
    },
    "browser_action": {
        "default_icon": "images/logo.png",
        "default_title": "iListen"
    },
    "description": "iListen for all music",
    "icons": {
        "128": "images/logo.png",
        "16": "images/logo.png",
        "48": "images/logo.png"
    },
    "manifest_version": 2,
    "name": "iListen",
    "permissions": [ "notifications", "unlimitedStorage", "downloads", "storage", "proxy", "contextMenus", "tabs", "*://music.163.com/*", "*://*.xiami.com/*", "*://*.qq.com/*", "webRequest", "webRequestBlocking"],
    "version": "1.1",
    "web_accessible_resources": [ "images/*" ]
}
